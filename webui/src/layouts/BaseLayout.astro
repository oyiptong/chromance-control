---
const { title } = Astro.props;
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-base-200 text-base-content">
    <main class="max-w-3xl mx-auto p-4">
      <slot />
    </main>
  </body>
</html>

